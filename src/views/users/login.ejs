<!DOCTYPE html>
<html lang="en">
  
  <%- include('../partials/head.ejs') %> 

  <body>
    <%- include('../partials/header.ejs') %> 

    <main>
      <section>
        <div class="intro-products">
          <h2>
            Es hora de tomar un break
            <i class="far fa-smile-wink"></i>
          </h2>
          <h3>e ingresar a tu cuenta...</h3>
          
        </div>
      </section>

      <section class="container">
        <form action="/register" class="register-form-container">
          <div class="register-inputs-text">
            
            <div class="form-row">
              <label for="user-name" class="form-row-label-desktop"
                >Nombre de usuari@:</label
              >
              <input
                type="text"
                name="user-name"
                id="user-name"
                placeholder="Nombre de usuari@"
                class="input-text"
                required
              />
            </div>
            <div class="form-row">
              <label for="password" class="form-row-label-desktop"
                >Contraseña:</label
              >
              <input
                type="text"
                name="password"
                id="password"
                placeholder="Contraseña"
                minlength="8"
                class="input-text"
                required
              />
            </div>
           
          </div>

          <div class="form-row-buttons">
            
            <button type="submit" class="input-text">Enviar</button>
          </div>
        </form>
      </section>
    </main>

    <%- include('../partials/footer.ejs') %> 

  </body>
</html>
