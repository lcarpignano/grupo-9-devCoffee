<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head.ejs') %>

  <script src="/js/register.js"></script>

  <body>
    <%- include('../partials/header.ejs') %>

    <main>
      <section>
        <div class="intro-products">
          <h2>
            Es hora de tomar un break
            <i class="far fa-smile-wink"></i>
          </h2>
          <h3>y completar el registro.</h3>
        </div>
      </section>

      <section class="container">
        <form
          id="form-register"
          action="/users/create"
          method="POST"
          enctype="multipart/form-data"
          class="register-form-container"
        >
          <div class="register-inputs-text">
            <div class="form-row">
              <label for="first_name">Nombre: </label>

              <input
                type="text"
                name="first_name"
                id="first_name"
                placeholder="Ingresa tu nombre"
                class="input-text"
              />
              <p class="warning error-message error-firstname" style="display: none;">Completa con tu nombre</p>
              <% if (locals.errors && errors.first_name) { %>
              <p class="warning"><%= errors.first_name.msg %></p>
              <% } %>
            </div>

            <div class="form-row">
              <label for="last_name">Apellido: </label>
              <input
                type="text"
                name="last_name"
                id="last_name"
                placeholder="Ingresa tu apellido"
                class="input-text"
              />
              <p class="warning error-message error-lastname" style="display: none;">Completa con tu apellido</p>
              <% if (locals.errors && errors.last_name) { %>
              <p class="warning"><%= errors.last_name.msg %></p>
              <% } %>
            </div>

            <div class="form-row">
              <label for="username">Nombre de usuari@:</label>
              <input
                type="text"
                name="username"
                id="username"
                placeholder="Nombre de usuari@"
                class="input-text"
              />
              <p class="warning error-message error-username" style="display: none;">Completa con tu nombre de usuario</p>
              <% if (locals.errors && errors.username) { %>
              <p class="warning"><%= errors.username.msg %></p>
              <% } %>
            </div>

            <div class="form-row">
              <label for="birth">Fecha de nacimiento:</label>
              <input type="date" name="birth" id="birth" class="input-text" />
              <p class="warning error-message error-birth" style="display: none;">Completa tu fecha de nacimiento</p>

            </div>

            <div class="form-row">
              <label for="mail">Correo Electrónico: </label>
              <input
                type="email"
                name="mail"
                id="mail"
                placeholder="Ingresa tu Email"
                class="input-text"
              />
              <p class="warning error-message error-mail" style="display: none;">Completa tu correo electronico</p>

              <% if (locals.errors && errors.mail) { %>
              <p class="warning"><%= errors.mail.msg %></p>
              <% } %>
            </div>

            <div class="form-row">
              <label for="check_mail">Correo Electrónico: </label>
              <input
                type="email"
                name="check_mail"
                id="check_mail"
                placeholder="Re ingresa tu Email"
                class="input-text"
              />
              <p class="warning error-message error-check_mail" style="display: none;">Confirma tu correo electronico</p>

              <% if (locals.errors && errors.mail) { %>
              <p class="warning"><%= errors.mail.msg %></p>
              <% } %>
            </div>

            <div class="form-row">
              <label for="password">Contraseña:</label>
              <input
                type="password"
                name="password"
                id="password"
                placeholder="Ingresa tu contraseña"
                class="input-text"
              />
              <p class="warning error-message error-password" style="display: none;">Completa tu correo contraseña</p>

              <% if (locals.errors && errors.password) { %>
              <p class="warning"><%= errors.password.msg %></p>
              <% } %>
            </div>
            <div class="form-row">
              <label for="check_pass">Confirmar contraseña:</label>
              <input
                type="password"
                name="check_pass"
                id="check_pass"
                placeholder="Confirma tu contraseña"
                class="input-text"
              />
              <p class="warning error-message error-check_pass" style="display: none;">Confirma tu correo contraseña</p>

              <% if (locals.errors && errors.check_pass) { %>
              <p class="warning"><%= errors.check_pass.msg %></p>
              <% } %>
            </div>

            <div class="form-row">
              <label for="country">País:</label>
              <select name="country" id="country" class="input-text">
                <option value="country" class="input-text">
                  Selecciona tu país...
                </option>
              </select>
              <p class="warning error-message error-country" style="display: none;">Confirma tu país</p>

            </div>

            <div class="form-row">
              <label for="city">Ciudad:</label>
              <select name="city" id="city" class="input-text">
                <option value="city" class="input-text">
                  Selecciona tu ciudad...
                </option>
              <p class="warning error-message error-city" style="display: none;">Confirma tu ciudad</p>

              </select>
            </div>

            <div class="form-row">
              <label for="address">Domicilio:</label>
              <input
                type="text"
                name="address"
                id="address"
                placeholder="Ingresa tu domicilio"
                class="input-text"
              />
              <p class="warning error-message error-address" style="display: none;">Confirma tu domicilio</p>

            </div>

            <div class="form-row">
              <label for="zip">Código Postal:</label>
              <input
                type="text"
                name="zip"
                id="zip"
                placeholder="Ingresa tu código ZIP"
                class="input-text"
              />
              <p class="warning error-message error-zip" style="display: none;">Confirma tu código postal</p>

            </div>
            <div class="form-row">
              <input
                class="input-text hidden"
                type="file"
                name="photo"
                id="actual-btn"
                accept=".jpg, .png, .jpeg"
              />
              <label for="photo">Foto de Usuario:</label>
              <label for="actual-btn" class="file-upload input-text"
                >Elige la foto</label
              >
            </div>
          </div>

          <div class="form-row-buttons">
            <button type="submit" class="input-text">Enviar</button>
          </div>
        </form>
      </section>
    </main>

    <%- include('../partials/footer.ejs') %>
  </body>
</html>
